stipula Bet {
	asset wallet1
	field val1, event, amount, t_before, t_after
	init Init
	
	agreement (Better1)(event, amount, t_before, t_after){
			Better1 : event, amount, t_before, t_after
	} ==> @Init

	@Init Better1 : place_bet(x)[h] (h == amount){
		h -o wallet1
		x -> val1;
		t_before >> @First { wallet1 -o Better1 } ==> @Fail
	} ==> @First
}